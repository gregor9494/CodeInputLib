<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="10dp">

    <pl.gg.codeinputlibrary.codeinputview.CodeInputView
        android:id="@+id/pairing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:space_between_letters_size="10dp"
        app:code_text_size="18sp"
        app:custom_underline_width="20dp"
        app:animate_on_complete="false"
        app:show_keyboard="true"
        app:time_character_is_shown_while_typing="500">

        <requestFocus />
    </pl.gg.codeinputlibrary.codeinputview.CodeInputView>

</LinearLayout>
